---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div class="relative flex items-start space-x-4 pb-8">
  <div class="flex flex-col items-center">
    <div class="w-2.5 h-2.5 bg-blue-600 rounded-full"></div>
    <div class="flex-grow w-0.5 bg-gray-300 dark:bg-gray-600"></div>
  </div>

  <div class="space-y-2">
    <time class="block text-xs font-medium text-sky-800">
      {date}
    </time>

    <h3 class="text-lg font-semibold text-blue-600 mt-2">
      {title}
    </h3>

    <p class="text-sm text-gray-600 dark:text-gray-400 text-pretty">
      {description}
    </p>

    {link && (
      <a
        href={link}
        class="inline-block text-sm font-medium text-blue-600 hover:underline dark:text-blue-400"
      >
        Saber m√°s
      </a>
    )}
  </div>
</div>
